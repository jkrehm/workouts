{
    "options": {
        "precision": 10,
        "unixNewlines": true
    },
    "dev": {
        "options": {
            "lineNumbers": true,
            "style": "expanded"
        },
        "files": [{
            "expand": true,
            "cwd": "public/css/sass",
            "src": "**/*.scss",
            "dest": "public/css",
            "ext": ".css"
        }]
    },
    "dist": {
        "files": [{
            "expand": true,
            "cwd": "public/css/sass",
            "src": "**/*.scss",
            "dest": "public/css",
            "ext": ".css"
        }]
    }
}